<?php
/**
 * Product list toolbar
 *
 * @see Mage_Catalog_Block_Product_List_Toolbar
 */
/* @var $this Mage_Catalog_Block_Product_List_Toolbar */
?>
<?php if($this->getCollection()->getSize()): ?>
<?php if( $this->isExpanded() ): ?>
<table class="pager" cellspacing="0">
    <tr>
        <td class="sort-by">
            <strong><?php echo $this->__('Sort by') ?>:</strong> 
            <select onchange="setLocation(this.value)">
            <?php $count = 1; ?>
            <?php foreach($this->getAvailableOrders() as $_key=>$_order): ?>
                <?php $_type = Mage::getModel('eav/entity_attribute')->loadByCode('catalog_product', $_key)->getBackendType(); ?>
                <?php if (in_array($_type, array('varchar', 'text'))): ?>
                <option value="<?php echo $this->getOrderUrl($_key, 'asc') ?>"<?php if ($this->isOrderCurrent($_key) && $this->getCurrentDirection() != 'desc') { echo ' selected="selected"'; } ?>><?php echo $_order ?> <?php echo $this->__('alphabetical') ?></option>
                <option value="<?php echo $this->getOrderUrl($_key, 'desc') ?>"<?php if ($this->isOrderCurrent($_key) && $this->getCurrentDirection() == 'desc') { echo ' selected="selected"'; } ?>><?php echo $_order ?> <?php echo $this->__('reverse alphabetical') ?></option>
                <?php elseif (in_array($_type, array('int', 'decimal'))): ?>
                <option value="<?php echo $this->getOrderUrl($_key, 'asc') ?>"<?php if ($this->isOrderCurrent($_key) && $this->getCurrentDirection() != 'desc') { echo ' selected="selected"'; } ?>><?php echo $_order ?> <?php echo $this->__('low to high') ?></option>
                <option value="<?php echo $this->getOrderUrl($_key, 'desc') ?>"<?php if ($this->isOrderCurrent($_key) && $this->getCurrentDirection() == 'desc') { echo ' selected="selected"'; } ?>><?php echo $_order ?> <?php echo $this->__('high to low') ?></option>
                <?php elseif ($_type == 'datetime'): ?>
                <option value="<?php echo $this->getOrderUrl($_key, 'asc') ?>"<?php if ($this->isOrderCurrent($_key) && $this->getCurrentDirection() != 'desc') { echo ' selected="selected"'; } ?>><?php echo $_order ?> <?php echo $this->__('earliest') ?></option>
                <option value="<?php echo $this->getOrderUrl($_key, 'desc') ?>"<?php if ($this->isOrderCurrent($_key) && $this->getCurrentDirection() == 'desc') { echo ' selected="selected"'; } ?>><?php echo $_order ?> <?php echo $this->__('latest') ?></option>
                <?php else:?>
                <option value="<?php echo $this->getOrderUrl($_key, 'asc') ?>"<?php if ($this->isOrderCurrent($_key) && $this->getCurrentDirection() != 'desc') { echo ' selected="selected"'; } ?>><?php echo $_order ?> <?php echo $this->__('ascending') ?></option>
                <option value="<?php echo $this->getOrderUrl($_key, 'desc') ?>"<?php if ($this->isOrderCurrent($_key) && $this->getCurrentDirection() == 'desc') { echo ' selected="selected"'; } ?>><?php echo $_order ?> <?php echo $this->__('descending') ?></option>
                <?php endif; ?>
                <?php $count++; ?>
            <?php endforeach; ?>
            </select>
        </td>
        <?php if( $this->isEnabledViewSwitcher() ): ?>
        <td class="a-right">
            <?php $_modes = $this->getModes(); ?>
            <?php if($_modes && count($_modes)>1): ?>
            <strong><?php echo $this->__('View as') ?>:</strong>
            <?php $count = 1; ?>
            <?php foreach ($this->getModes() as $_code=>$_label): ?>
                <?php if($this->isModeActive($_code)): ?>
                    <?php echo $_label ?>
                <?php else: ?>
                    <a href="<?php echo $this->getModeUrl($_code) ?>"><?php echo $_label ?></a>
                <?php endif; ?>
                <?php if ($count < count($this->getModes())): ?>
                    <span class="separator">|</span>
                <?php endif; ?>
                <?php $count++; ?>
            <?php endforeach; ?>
            <?php endif; ?>
        </td>
        <?php endif; ?>
        <?php if ($this->helper('rss/catalog')->getTagFeedUrl()): ?>
        <td class="a-right"><a href="<?php echo $this->helper('rss/catalog')->getTagFeedUrl() ?>" class="nobr link-feed"><?php echo $this->__('Subscribe to Feed') ?></a></td>
        <?php endif; ?>
    </tr>
</table>
<?php endif; ?>
<div class="pages<?php if( !$this->isExpanded() ): ?> bottom<?php endif; ?>">
    <?php if (!$this->isFirstPage()): ?>
    <a href="<?php echo $this->getPreviousPageUrl() ?>" title="<?php echo $this->__('Previous') ?>"><img src="<?php echo $this->getSkinUrl('images/pager_arrow_left.gif') ?>" alt="<?php echo $this->__('Previous') ?>" /> <?php echo $this->__('Previous') ?></a>
    <?php else: ?>
    <img src="<?php echo $this->getSkinUrl('images/pager_arrow_left.gif') ?>" alt="<?php echo $this->__('Previous') ?>" /> <?php echo $this->__('Previous') ?>
    <?php endif; ?>
    
    <strong><?php echo $this->__('Page') ?></strong>
    <select onchange="setLocation(this.value)">
    <?php foreach ($this->getPages() as $_page): ?>
        <option value="<?php echo $this->getPageUrl($_page) ?>"<?php if ($this->isPageCurrent($_page)) { echo ' selected="selected"'; } ?>><?php echo $_page ?></option>
    <?php endforeach; ?>
    </select>
    <strong>of</strong>
    <?php echo $this->getLastPageNum() ?>
    
    <?php if (!$this->isLastPage()): ?>
    <a href="<?php echo $this->getNextPageUrl() ?>" title="<?php echo $this->__('Next') ?>"><?php echo $this->__('Next') ?> <img src="<?php echo $this->getSkinUrl('images/pager_arrow_right.gif') ?>" alt="<?php echo $this->__('Next') ?>" /></a>
    <?php else: ?>
    <?php echo $this->__('Next') ?> <img src="<?php echo $this->getSkinUrl('images/pager_arrow_right.gif') ?>" alt="<?php echo $this->__('Next') ?>" />
    <?php endif ?>
    
    <select class="limit" onchange="setLocation(this.value)">
        <?php foreach ($this->getAvailableLimit() as  $_key=>$_limit): ?>
            <option value="<?php echo $this->getLimitUrl($_key) ?>"<?php if($this->isLimitCurrent($_key)): ?> selected="selected"<?php endif ?>>
                <?php echo $_limit ?><?php if(is_numeric($_limit)): ?> <?php echo $this->__('per page') ?><?php endif; ?>
            </option>
        <?php endforeach; ?>
    </select>
</div>
<?php endif ?>

