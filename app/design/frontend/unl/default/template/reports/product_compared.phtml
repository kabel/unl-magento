<?php if ($_products = $this->getRecentlyComparedProducts()): ?>
<div class="zenbox neutral block block-compared">
    <h3><?php echo $this->__('Recently Compared Products') ?></h3>
    <ol id="recently-compared-items">
    <?php foreach ($_products as $_item): ?>
        <li class="item">
            <p class="product-name"><a href="<?php echo $this->getProductUrl($_item) ?>"><?php echo $this->htmlEscape($_item->getName()) ?></a></p>
        </li>
    <?php endforeach; ?>
    </ol>
    <script type="text/javascript">decorateList('recently-compared-items');</script>
</div>
<?php endif; ?>
