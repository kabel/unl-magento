?>
<?php $l = $this->getWishlistItemsCount() ?>
<div style="border:1px solid #bebcb7; padding:15px; background:#f8f7f5;">
<table cellspacing="0" cellpadding="0" border="0" width="100%">
    <tr>
    <?php $i = 0; foreach ($this->getWishlistItems() as $item): $i++ ?>
        <td width="32%">
            <p align="center" style="margin:1.1em 0;"><a href="<?php echo $this->getProductUrl($item) ?>"><img src="<?php echo preg_replace('/^https:/', 'http:', $this->helper('catalog/image')->init($item, 'small_image')->resize(135)); ?>" style="border:1px solid #ccc;" width="135" height="135" alt="" /></a></p>
            <p align="center" style="margin:1.1em 0;"><a href="<?php echo $this->getProductUrl($item) ?>" style="color:#ba0000;"><strong><?php echo $this->htmlEscape($item->getName()) ?></strong></a></p>
            <?php if($this->hasDescription($item)): ?><p align="center"><?php echo $this->__('Comment') ?>:<br /><?php echo $this->getEscapedDescription($item) ?></p><?php endif; ?>
            <p align="center" style="margin:1.1em 0;"><a href="<?php echo $this->getProductUrl($item) ?>" style="color:#ba0000;"><?php echo $this->__('View Product') ?></a> <small>
            <?php if ($item->getIsSalable()): ?>|</small> <a href="<?php echo $this->getAddToCartUrl($item) ?>" style="color:#ba0000;"><strong><?php echo $this->__('Add to Cart') ?></strong></a><?php endif;?>
            </p></td>
        <?php if ($i%3!=0): ?>
            <td width="2%"></td>
        <?php else: ?>
           </tr>
            <tr>
                <td colspan="5">&nbsp;</td>
            </tr>
            <?php if ($i<$l): ?>
               <tr>
            <?php endif ?>
        <?php endif ?>
    <?php endforeach ?>
</table>
</div>
