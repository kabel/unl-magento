        <a href="<?php echo $this->getForgotPasswordUrl() ?>" class="left"><?php echo $this->__('Forgot Your Password?') ?></a>
        <button class="form-button" type="submit" name="send" id="send2"><span><?php echo $this->__('Login') ?></span></button>
    </div>
</div>
</div>
</form>
