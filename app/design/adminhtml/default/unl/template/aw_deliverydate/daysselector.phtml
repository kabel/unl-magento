	function fireChangeEvt(obj){
			
			if(typeof document.createEvent !== 'undefined'){
				var e = document.createEvent('HTMLEvents');
				e.initEvent('change', false, false);
				obj.dispatchEvent(e);
			}else{
				obj.fireEvent('onchange')
			}
