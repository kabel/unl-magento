    var changePeriod = function(el, index){
		
		if($F(el) == 'period' || $F(el) == 'recurrent_period'){
			$('period_'+index+'_selwrapper').show()
			if($F(el) == 'recurrent_period'){
				$('period_type_'+index+'_selwrapper').show()
