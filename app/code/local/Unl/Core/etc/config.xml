<?xml version="1.0"?>
<config>
    <modules>
        <Unl_Core>
            <version>0.1.5</version>
            <depends>
                <Mage_Admin />
                <Mage_Adminhtml />
                <Mage_Bundle />
                <Mage_Catalog />
                <Mage_Cms />
                <Mage_Core />
                <Mage_Reports />
                <Mage_Sales />
                <Mage_Tax />
            </depends>
        </Unl_Core>
    </modules>
    
    <global>
        <blocks>
            <adminhtml>
                <rewrite>
                    <catalog_category_tree>Unl_Core_Block_Adminhtml_Catalog_Category_Tree</catalog_category_tree>
                    <catalog_product>Unl_Core_Block_Adminhtml_Catalog_Product</catalog_product>
                    <catalog_product_grid>Unl_Core_Block_Adminhtml_Catalog_Product_Grid</catalog_product_grid>
                    <cms_block_edit_form>Unl_Core_Block_Adminhtml_Cms_Block_Edit_Form</cms_block_edit_form>
                    <cms_page_edit_tab_main>Unl_Core_Block_Adminhtml_Cms_Page_Edit_Tab_Main</cms_page_edit_tab_main>
                    <dashboard_sales>Unl_Core_Block_Adminhtml_Dashboard_Sales</dashboard_sales>
                    <dashboard_tab_customers_most>Unl_Core_Block_Adminhtml_Dashboard_Tab_Customers_Most</dashboard_tab_customers_most>
                    <dashboard_tab_products_ordered>Unl_Core_Block_Adminhtml_Dashboard_Tab_Products_Ordered</dashboard_tab_products_ordered>
                    <dashboard_tab_products_viewed>Unl_Core_Block_Adminhtml_Dashboard_Tab_Products_Viewed</dashboard_tab_products_viewed>
                    <dashboard_orders_grid>Unl_Core_Block_Adminhtml_Dashboard_Orders_Grid</dashboard_orders_grid>
                    <dashboard_totals>Unl_Core_Block_Adminhtml_Dashboard_Totals</dashboard_totals>
                    <newsletter_template_edit_form>Unl_Core_Block_Adminhtml_Newsletter_Template_Edit_Form</newsletter_template_edit_form>
                    <page_header>Unl_Core_Block_Adminhtml_Page_Header</page_header>
                    <permissions_user_edit_tab_main>Unl_Core_Block_Adminhtml_Permissions_User_Edit_Tab_Main</permissions_user_edit_tab_main>
                    <report_sales_tax_grid>Unl_Core_Block_Adminhtml_Report_Sales_Tax_Grid</report_sales_tax_grid>
                    <system_email_template_edit_form>Unl_Core_Block_Adminhtml_System_Email_Template_Edit_Form</system_email_template_edit_form>
                </rewrite>
            </adminhtml>
             <bundle>
                <rewrite>
                    <adminhtml_catalog_product_edit_tab_bundle_option>Unl_Core_Block_Bundle_Adminhtml_Catalog_Product_Edit_Tab_Bundle_Option</adminhtml_catalog_product_edit_tab_bundle_option>
                    <adminhtml_catalog_product_edit_tab_bundle_option_selection>Unl_Core_Block_Bundle_Adminhtml_Catalog_Product_Edit_Tab_Bundle_Option_Selection</adminhtml_catalog_product_edit_tab_bundle_option_selection>
                    <catalog_product_view_type_bundle_option_checkbox>Unl_Core_Block_Bundle_Catalog_Product_View_Type_Bundle_Option_Checkbox</catalog_product_view_type_bundle_option_checkbox>
                    <catalog_product_view_type_bundle_option_multi>Unl_Core_Block_Bundle_Catalog_Product_View_Type_Bundle_Option_Multi</catalog_product_view_type_bundle_option_multi>
                    <catalog_product_view_type_bundle_option_radio>Unl_Core_Block_Bundle_Catalog_Product_View_Type_Bundle_Option_Radio</catalog_product_view_type_bundle_option_radio>
                    <catalog_product_view_type_bundle_option_select>Unl_Core_Block_Bundle_Catalog_Product_View_Type_Bundle_Option_Select</catalog_product_view_type_bundle_option_select>
                </rewrite>
             </bundle>
            <catalog>
                <rewrite>
                    <navigation>Unl_Core_Block_Catalog_Navigation</navigation>
                    <breadcrumbs>Unl_Core_Block_Catalog_Breadcrumbs</breadcrumbs>
                </rewrite>
            </catalog>
            <checkout>
                <rewrite>
                    <links>Unl_Core_Block_Checkout_Links</links>
                </rewrite>
            </checkout>
            <cms>
                <rewrite>
                    <page>Unl_Core_Block_Cms_Page</page>
                </rewrite>
            </cms>
            <unl_core>
                <class>Unl_Core_Block</class>
            </unl_core>
            <wishlist>
                <rewrite>
                    <links>Unl_Core_Block_Wishlist_Links</links>
                </rewrite>
            </wishlist>
        </blocks>
        <helpers>
            <adminhtml>
                <rewrite>
                    <dashboard_order>Unl_Core_Helper_Adminhtml_Dashboard_Order</dashboard_order>
                </rewrite>
            </adminhtml>
        </helpers>
        <models>
            <unl_core>
                <class>Unl_Core_Model</class>
                <resourceModel>unl_core_mysql4</resourceModel>
            </unl_core>
            <unl_core_mysql4>
                <class>Unl_Core_Model_Mysql4</class>
                <entities>
                    <tax_boundary>
                        <table>unl_tax_boundary</table>
                    </tax_boundary>
                </entities>
            </unl_core_mysql4>
            <admin>
                <rewrite>
                    <user>Unl_Core_Model_Admin_User</user>
                </rewrite>
            </admin>
            <bundle>
                <rewrite>
                    <product_type>Unl_Core_Model_Bundle_Product_Type</product_type>
                </rewrite>
            </bundle>
            <catalog>
                <rewrite>
                    <convert_adapter_product>Unl_Core_Model_Convert_Adapter_Product</convert_adapter_product>
                </rewrite>
            </catalog>
            <core>
                <rewrite>
                    <translate>Unl_Core_Model_Core_Translate</translate>
                </rewrite>
            </core>
            <reports_mysql4>
                <rewrite>
                    <order_collection>Unl_Core_Model_Reports_Mysql4_Order_Collection</order_collection>
                    <tax_collection>Unl_Core_Model_Reports_Mysql4_Tax_Collection</tax_collection>
                </rewrite>
            </reports_mysql4>
            <tax>
                <rewrite>
                    <calculation>Unl_Core_Model_Tax_Calculation</calculation>
                </rewrite>
            </tax>
            <tax_mysql4>
                <rewrite>
                    <calculation>Unl_Core_Model_Tax_Mysql4_Calculation</calculation>
                </rewrite>
            </tax_mysql4>
        </models>
        <resources>
            <unl_core_setup>
                <setup>
                    <module>Unl_Core</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </unl_core_setup>
            <unl_core_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </unl_core_write>
            <unl_core_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </unl_core_read>
        </resources>
        
        <fieldsets>
            <sales_convert_quote_item>
                <source_store_view><to_order_item>*</to_order_item></source_store_view>
            </sales_convert_quote_item>
        </fieldsets>
        
        <events>
            <sales_quote_item_set_product>
                <observers>
                    <source_store_set>
                        <type>singleton</type>
                        <class>unl_core/sales_observer</class>
                        <method>setQuoteItemSourceStore</method>
                    </source_store_set>
                </observers>
            </sales_quote_item_set_product>
        </events>
    </global>
    
    <admin>
        <routers>
            <unl_core>
                <use>admin</use>
                <args>
                    <module>Unl_Core</module>
                    <frontName>unl</frontName>
                </args>
            </unl_core>
        </routers>
    </admin>
    
    <adminhtml>
        <events>
            <controller_action_predispatch_adminhtml_catalog_category_edit>
		        <observers>
		            <category_auth>
		                <type>singleton</type>
                        <class>unl_core/admin_observer</class>
                        <method>setStoreParamFromUser</method>
		            </category_auth>
		        </observers>
		    </controller_action_predispatch_adminhtml_catalog_category_edit>
		    <controller_action_predispatch_adminhtml_catalog_product_edit>
                <observers>
                    <product_auth>
                        <type>singleton</type>
                        <class>unl_core/admin_observer</class>
                        <method>catalogProductEditActionPreDispatch</method>
                    </product_auth>
                </observers>
            </controller_action_predispatch_adminhtml_catalog_product_edit>
            <controller_action_predispatch_adminhtml_catalog_product_categories>
                <observers>
                    <category_auth>
                        <type>singleton</type>
                        <class>unl_core/admin_observer</class>
                        <method>setStoreParamFromUser</method>
                    </category_auth>
                </observers>
            </controller_action_predispatch_adminhtml_catalog_product_categories>
        </events>
        
        <menu>
            <report>
                <children>
                    <salesroot>
                        <children>
                            <bursar translate="title" module="reports">
                                <title>Bursar Report</title>
                                <action>unl/report_sales/bursar</action>
                            </bursar>
                        </children>
                    </salesroot>
                </children>
            </report>
            <sales>
                <children>
                    <picklist translate="title" module="sales">
                        <title>Pick Lists</title>
                        <action>unl/sales_picklist</action>
                        <sort_order>41</sort_order>
                    </picklist>
                </children>
            </sales>
        </menu>
        
        <acl>
            <resources>
                <admin>
                    <children>
                        <report>
                            <children>
                                <salesroot>
                                    <children>
                                        <bursar translate="title">
                                            <title>Bursar Report</title>
                                        </bursar>
                                    </children>
                                </salesroot>
                            </children>
                        </report>
                        <sales>
                            <children>
                                <picklist translate="title">
                                    <title>Pick Lists</title>
                                    <sort_order>41</sort_order>
                                </picklist>
                            </children>
                        </sales>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    
    <stores>
        <admin>
            <!-- default admin design package and theme -->
            <design>
                <package>
                    <name>default</name>
                </package>
                <theme>
                    <default>unl</default>
                </theme>
            </design>
        </admin>
    </stores>
</config>
