<?xml version="1.0"?>
<config>
    <modules>
        <Unl_Core>
            <version>0.1.1</version>
            <depends>
                <Mage_Catalog />
                <Mage_Admin />
            </depends>
        </Unl_Core>
    </modules>
    
    <global>
        <blocks>
            <adminhtml>
                <rewrite>
                    <catalog_category_tree>Unl_Core_Block_Adminhtml_Catalog_Category_Tree</catalog_category_tree>
                    <catalog_product>Unl_Core_Block_Adminhtml_Catalog_Product</catalog_product>
                    <catalog_product_grid>Unl_Core_Block_Adminhtml_Catalog_Product_Grid</catalog_product_grid>
                    <cms_block_edit_form>Unl_Core_Block_Adminhtml_Cms_Block_Edit_Form</cms_block_edit_form>
                    <cms_page_edit_tab_main>Unl_Core_Block_Adminhtml_Cms_Page_Edit_Tab_Main</cms_page_edit_tab_main>
                    <newsletter_template_edit_form>Unl_Core_Block_Adminhtml_Newsletter_Template_Edit_Form</newsletter_template_edit_form>
                    <permissions_user_edit_tab_main>Unl_Core_Block_Adminhtml_Permissions_User_Edit_Tab_Main</permissions_user_edit_tab_main>
                    <system_email_template_edit_form>Unl_Core_Block_Adminhtml_System_Email_Template_Edit_Form</system_email_template_edit_form>
                </rewrite>
            </adminhtml>
            <catalog>
                <rewrite>
                    <breadcrumbs>Unl_Core_Block_Catalog_Breadcrumbs</breadcrumbs>
                </rewrite>
            </catalog>
            <cms>
                <rewrite>
                    <page>Unl_Core_Block_Cms_Page</page>
                </rewrite>
            </cms>
            <unl_core>
                <class>Unl_Core_Block</class>
            </unl_core>
        </blocks>
        <models>
            <unl_core>
                <class>Unl_Core_Model</class>
                <resourceModel>unl_core_mysql4</resourceModel>
            </unl_core>
            <unl_core_mysql4>
                <class>Unl_Core_Model_Mysql4</class>
            </unl_core_mysql4>
            <admin>
                <rewrite>
                    <user>Unl_Core_Model_Admin_User</user>
                </rewrite>
            </admin>
            <reports_mysql4>
                <rewrite>
                    <order_collection>Unl_Core_Model_Reports_Mysql4_Order_Collection</order_collection>
                </rewrite>
            </reports_mysql4>
        </models>
        <resources>
            <unl_core_setup>
                <setup>
                    <module>Unl_Core</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </unl_core_setup>
            <unl_core_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </unl_core_write>
            <unl_core_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </unl_core_read>
        </resources> 
    </global>
    
    <admin>
        <routers>
            <unl_core>
                <use>admin</use>
                <args>
                    <module>Unl_Core</module>
                    <frontName>unl</frontName>
                </args>
            </unl_core>
        </routers>
    </admin>
    
    <adminhtml>
        <events>
            <controller_action_predispatch_adminhtml_catalog_category_edit>
		        <observers>
		            <category_auth>
		                <type>singleton</type>
                        <class>unl_core/admin_observer</class>
                        <method>setStoreParamFromUser</method>
		            </category_auth>
		        </observers>
		    </controller_action_predispatch_adminhtml_catalog_category_edit>
		    <controller_action_predispatch_adminhtml_catalog_product_edit>
                <observers>
                    <product_auth>
                        <type>singleton</type>
                        <class>unl_core/admin_observer</class>
                        <method>catalogProductEditActionPreDispatch</method>
                    </product_auth>
                </observers>
            </controller_action_predispatch_adminhtml_catalog_product_edit>
            <controller_action_predispatch_adminhtml_catalog_product_categories>
                <observers>
                    <category_auth>
                        <type>singleton</type>
                        <class>unl_core/admin_observer</class>
                        <method>setStoreParamFromUser</method>
                    </category_auth>
                </observers>
            </controller_action_predispatch_adminhtml_catalog_product_categories>
        </events>
        
        <menu>
            <report>
                <children>
                    <salesroot>
                        <children>
                            <bursar translate="title" module="reports">
                                <title>Bursar Report</title>
                                <action>unl/report_sales/bursar</action>
                            </bursar>
                        </children>
                    </salesroot>
                </children>
            </report>
        </menu>
        
        <acl>
            <resources>
                <admin>
                    <children>
                        <report>
                            <children>
                                <salesroot>
                                    <children>
                                        <bursar translate="title">
                                            <title>Bursar Report</title>
                                        </bursar>
                                    </children>
                                </salesroot>
                            </children>
                        </report>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    
</config>
